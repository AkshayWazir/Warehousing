<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomTextAppearance" parent="Widget.Design.TextInputLayout">
        <item name="errorTextAppearance">@android:color/holo_red_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorOnError">@color/softOrange</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>
    <style name="darkInputDesign" parent="Widget.Design.TextInputLayout">
        <item name="errorTextAppearance">@color/g_red</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:textColorHint">@color/darkBlue</item>
        <item name="colorControlNormal">@color/darkBlue</item>
        <item name="colorOnError">@color/g_red</item>
        <item name="colorControlActivated">@color/darkBlue</item>
        <item name="colorControlHighlight">@color/darkBlue</item>
    </style>
</resources>